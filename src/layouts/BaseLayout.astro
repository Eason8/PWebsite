---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
import logoSrc from '../assets/1.svg'; 
const { title, pageTitle } = Astro.props;
const currentPath = Astro.url.pathname;
---
<html lang="zh-CN" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="个人主页 - 分享技术、生活与思考" />
    <title>{pageTitle} | Wencheng Su</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
  </head>
  <body class="bg-gray-50 text-gray-900 transition-colors duration-300 dark:bg-gray-900 dark:text-gray-100">
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-white/90 dark:bg-gray-900/90 backdrop-blur-lg border-b border-gray-200 dark:border-gray-800 shadow-sm">
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="group flex items-center gap-2">
          <div class="w-10 h-10 rounded-lg overflow-hidden bg-white flex items-center justify-center group-hover:bg-gray-50 transition">
            <img src={logoSrc.src} alt="Logo" class="h-7 w-auto object-contain" />
          </div>
          <span class="font-bold text-xl tracking-tight hidden sm:block">Wencheng Su</span>
        </a>
        
        <!-- Navigation Links -->
        <div class="flex items-center gap-1">
          <a 
            href="/" 
            class={`px-4 py-2 rounded-lg font-medium transition-all ${
              currentPath === '/' 
                ? 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400' 
                : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800'
            }`}
          >
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <span class="hidden sm:inline">简历</span>
            </span>
          </a>
          <a 
            href="/blog" 
            class={`px-4 py-2 rounded-lg font-medium transition-all ${
              currentPath.startsWith('/blog') 
                ? 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-600' 
                : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800'
            }`}
          >
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              <span class="hidden sm:inline">博客</span>
            </span>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16 min-h-screen">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
      <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="grid md:grid-cols-3 gap-8 mb-8">
          <!-- About -->
          <div>
            <h3 class="font-bold text-lg mb-4">关于我</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
              研究生在读，热爱技术与创造。分享技术、编程和生活的思考。
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h3 class="font-bold text-lg mb-4">快速链接</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 transition">个人简历</a></li>
              <li><a href="/blog" class="text-gray-600 dark:text-gray-400 hover:text-purple-600 transition">博客文章</a></li>
            </ul>
          </div>
          
          <!-- Social -->
          <div>
            <h3 class="font-bold text-lg mb-4">联系方式</h3>
            <div class="flex gap-4">
              <a href="https://github.com/Eason8" class="w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center hover:bg-gray-200 dark:hover:bg-gray-600 transition" aria-label="GitHub">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href="mailto:suwencheng@zju.edu.cn" class="w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center hover:bg-gray-200 dark:hover:bg-gray-600 transition" aria-label="Email">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Copyright -->
        <div class="pt-8 border-t border-gray-200 dark:border-gray-700 text-center text-sm text-gray-500">
          <p> 2025 Wencheng Su. Built with  using Astro & Tailwind CSS.</p>
        </div>
      </div>
    </footer>
  </body>
</html>